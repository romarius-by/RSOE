@model IEnumerable<RSOE.Models.ViewModels.EmployeePageViewModel>

@{
    ViewBag.Title = "Employees";
}

<h2>Employees list</h2>

<p>
    @Html.ActionLink("Add employee", "Create", null, null, new { @class = "btn btn-success" })
</p>

<table class="table table-bordered">
    <thead class="thead-dark">
        <tr>
            <th scope="col">
                Id
            </th>
            <th scope="col">
                FirstName
            </th>
            <th scope="col">
                LastName
            </th>
            <th scope="col">
                Employment date
            </th>
            <th scope="col">
                Position
            </th>
            <th scope="col">
                Company
            </th>
            <th scope="col">
                Actions
            </th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.EmployeeId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EmploymentDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Position)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Company)
            </td>
            <td class="d-flex justify-content-around">
                <div class="btn-group-vertical">
                    @Html.ActionLink("Edit", "Edit", new { id = item.EmployeeId }, new { @class = "btn btn-success" })
                </div>
                <div class="btn-group-vertical">
                    @Html.ActionLink("Delete", "Delete", new { id = item.EmployeeId }, new { @class = "btn btn-danger" })
                </div>
            </td>
        </tr>
        }
    </tbody>
</table>
<div class="d-flex justify-content-around">
    @Html.ActionLink("Back to Home page", "Index", "Home", null, new { @class = "btn btn-light" })
</div>